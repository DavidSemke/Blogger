extends ../layouts/root

block content
    h1 Login
    form(action="/login" method="POST")
        label(for="username") Username
        input#username(
            name="username" 
            type="text" 
            placeholder="username"
            required 
            autofocus 
        )
        label(for="password") Password
        input#password(name="password" type="password" required)
        button Login