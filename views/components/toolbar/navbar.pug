include ../icon/svgIconElement
include ../icon/svg/menuIcon
include ../icon/svg/searchIcon
include ../icon/svg/writeIcon
include ../form/searchbar

mixin navbar(isAuthorMode)
    nav.navbar
        .navbar__left
            +svgIconElement(
                'button',
                'menuIcon',
                null,
                {
                    'class': [
                        'navbar__sidebar-button'
                    ]
                }
            )

            if !isAuthorMode
                +svgIconElement(
                    'button',
                    'searchIcon',
                    null,
                    {
                        'class': [
                            'navbar__search-button'
                        ]
                    }
                )
                
        if !isAuthorMode
            .navbar__center 
                +searchbar(
                    'Search Tech Stack',
                    {
                        'class': [
                            'navbar__searchbar',
                        ], 
                    }
                )
        
        .navbar__right
            if !loginUser
                a(href='/login' class='-button -colorful') Log in
            else if !isAuthorMode
                +svgIconElement(
                    'a',
                    'writeIcon', 
                    'Write',
                    {
                        'href': `/users/${loginUser.username}/blog-posts/new-blog-post`,
                        'class': [
                            '-button',
                            '-colorful',
                        ]
                    }
                )
            else 
                include ../list/blogPostFormActionList